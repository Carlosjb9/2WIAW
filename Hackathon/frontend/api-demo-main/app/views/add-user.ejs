<%- include('header') %>

<div class="container">
  <div class="wrapper fadeInDown">
    <div id="formContent">
      <!-- Tabs Titles -->

      <!-- Icon -->
      <div class="fadeIn first">
        <img src="img/logo.png" id="icon" alt="User Icon" />
      </div>

      <!-- Login Form -->
      <form method="post" action="/add">
        <input
          type="text"
          id="login"
          class="fadeIn second"
          name="user"
          placeholder="login"
        />
        <input
          type="text"
          id="password"
          class="fadeIn third"
          name="pass"
          placeholder="password"
        />
        <input type="submit" class="fadeIn fourth" value="Log In" />
      </form>

      <!-- Remind Passowrd -->
      <div id="formFooter">
        <a class="underlineHover" href="#">Forgot Password?</a>
      </div>
    </div>
  </div>
</div>
<%- include('footer') %>
